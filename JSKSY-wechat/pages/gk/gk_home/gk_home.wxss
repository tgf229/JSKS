
.banner {
  width: 750rpx;
  height: 350rpx;
}
.banner-text-view {
  display: flex;
  width: 100%;
  height:50rpx;
  justify-content: center;
  align-items: center;
}
.banner-text {
  font-size:28rpx;
  color: #666666;
}

.split-line {
  width: 100%;
  background-color: #f6f6f6;
  height:24rpx;
}

.icon-bg {
  display: flex;
  flex-direction: row;
  width: 100%;
}
.icon-view {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding-top: 24rpx;
  padding-bottom: 24rpx;
}
.icon-img{
  width: 80rpx;
  height:80rpx;
}
.icon-text{
  margin-top: 16rpx;
  font-size: 24rpx;
  color:#444444;
}

.list-tips{
  display: flex;
  flex-direction: row;
  width:100%;
  height: 60rpx;
  align-items: center;
  margin-bottom: 20rpx;
}
.list-tips-line{
  flex: 1;
  height: 1px;
  margin-left: 20rpx;
  margin-right: 20rpx;
  background-color: #d5d5d5;
}
.list-tips-text{
  font-size: 26rpx;
  color: #666666;
}
.list-item{
  display: flex;
  flex-direction: row;
  width: 100%;
}
.list-item-img{
  width : 130rpx;
  height: 130rpx;
  margin-left: 28rpx;
}
.list-item-right{
  flex: 1;
  display: flex;
  flex-direction: column;
  margin-left: 26rpx;
  margin-right: 28rpx;
}
.list-item-right-text{
  flex: 1;
  font-size: 28rpx;
  color: #444444;
}
.list-item-right-time{
  height: 24rpx;
  font-size: 24rpx;
  color: #999999;
}
.list-item-line{
  margin-top: 28rpx;
  margin-bottom: 28rpx;
  height: 1px;
  margin-left: 20rpx;
  width:730rpx;
  background-color: #d5d5d5;
}
