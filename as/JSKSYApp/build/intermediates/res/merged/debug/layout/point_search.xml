<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    android:orientation="vertical">

    <include layout="@layout/app_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="20dp">

                <EditText
                    android:id="@+id/num"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="34dp"
                    android:background="@drawable/text_input"
                    android:hint="请输入你的考生号"
                    android:inputType="number"
                    android:maxLength="20"
                    android:paddingLeft="20dp"
                    android:textColor="@color/color_999999"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="21dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/ticket"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/text_input"
                        android:hint="请输入动态口令"
                        android:inputType="number"
                        android:maxLength="6"
                        android:paddingLeft="20dp"
                        android:textColor="@color/color_999999"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/check_txt"
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:background="@color/color_f3f3f3"
                        android:gravity="center"
                        android:textColor="@color/color_666666"
                        android:textSize="18dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="请填写动态口令卡上如上所示坐标位置的两组三位数字"
                    android:textColor="@color/color_d0021b"
                    android:textSize="12dp" />

                <Button
                    android:id="@+id/btn"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/btn_click"
                    android:text="查询"
                    android:textColor="@color/color_ffffff"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/point_ad_tips"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_eeeeee"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1px"
                    android:layout_weight="1"
                    android:background="@color/color_d5d5d5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="推广"
                    android:textColor="@color/color_444444"
                    android:textSize="12dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1px"
                    android:layout_weight="1"
                    android:background="@color/color_d5d5d5" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/point_ad_layout"
                android:background="@color/color_eeeeee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>