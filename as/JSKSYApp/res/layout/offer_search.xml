<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    android:orientation="vertical" >

    <include layout="@layout/app_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="18dp"
                android:src="@drawable/offer_tongzhi" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="34dp"
                android:lineSpacingExtra="5dp"
                android:text="志愿填报后如何最快得到录取结果？赶快预约我们的录取通知服务吧！录取工作开始后我们将每天三次更新录取信息并通过客户端推送通知考生。同时今年江苏省考试院升级了数据接口，除了录取信息，考生还可查询到本人的退档情况和原因。"
                android:textColor="@color/color_666666"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:lineSpacingExtra="5dp"
                android:text="PS：本服务将于2017-6-25日正式启用。"
                android:textColor="@color/color_d0021b"
                android:textSize="12dp" />

            <EditText
                android:id="@+id/num"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/text_input"
                android:hint="请输入你的考生号"
                android:inputType="number"
                android:maxLength="20"
                android:paddingLeft="20dp"
                android:textColor="@color/color_999999"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="21dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/ticket"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/text_input"
                    android:hint="请输入动态口令"
                    android:inputType="number"
                    android:maxLength="6"
                    android:paddingLeft="20dp"
                    android:textColor="@color/color_999999"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/check_txt"
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:background="@color/color_f3f3f3"
                    android:gravity="center"
                    android:textColor="@color/color_666666"
                    android:textSize="18dp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="请填写动态口令卡上如上所示坐标位置的两组三位数字"
                android:textColor="@color/color_d0021b"
                android:textSize="12dp" />

            <Button
                android:id="@+id/btn"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/btn_click"
                android:text="预约通知"
                android:textColor="@color/color_ffffff"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>