<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.jsksy.app.view.MyImageView
            android:id="@+id/default_banner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/home_banner" />

        <android.support.v4.view.ViewPager
            android:id="@+id/circlepager"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <com.viewpagerindicator.CirclePageIndicator
            android:id="@+id/circleindicator"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:paddingBottom="40dip"
            android:paddingLeft="5dip"
            android:visibility="gone"
            app:fillColor="@color/color_ffffff"
            app:pageColor="#eeeeee"
            app:strokeWidth="0dp" />
    </RelativeLayout>

	<View
		android:layout_width="match_parent"
		android:layout_height="11dp"
		android:background="@color/color_f3f3f3"/>

    <LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="10dp"
		android:orientation="horizontal">

		<ImageView
			android:id="@+id/gk_img"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:layout_height="wrap_content"
			android:scaleType="fitXY"
			android:src="@drawable/home_btn_gaokao"/>
		<ImageView
			android:id="@+id/school_img"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:scaleType="fitXY"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"
			android:layout_height="wrap_content"
			android:src="@drawable/home_btn_yuanxiaoku"/>
		<ImageView
			android:id="@+id/zz_img"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:scaleType="fitXY"
			android:layout_height="wrap_content"
			android:src="@drawable/home_btn_zhongzhi"/>
	</LinearLayout>

	<View
		android:layout_width="match_parent"
		android:layout_height="11dp"
		android:background="@color/color_f3f3f3"/>

    <LinearLayout
		android:layout_width="match_parent"
		android:layout_height="30dp"
		android:gravity="center_vertical"
		android:orientation="horizontal">
		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="15dp"
			android:layout_marginRight="5dp"
			android:src="@drawable/icon_news"/>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/color_444444"
			android:textSize="12dp"
			android:text="招考要闻"/>
	</LinearLayout>
	<View
		android:layout_width="match_parent"
		android:layout_height="1px"
		android:background="@color/color_d5d5d5"/>

</LinearLayout>