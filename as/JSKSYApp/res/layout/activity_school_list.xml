<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_ffffff"
    tools:context="com.jsksy.app.ui.school.SchoolListActivity">

    <include
        layout="@layout/app_title_search"/>

    <LinearLayout
        android:id="@+id/condition_layout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/color_fafafa"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/province_layout"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="地区"/>
            <ImageView
                android:id="@+id/province_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:src="@drawable/school_triangle_grey"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/batch_layout"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="批次"/>
            <ImageView
                android:id="@+id/batch_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:src="@drawable/school_triangle_grey"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/feature_layout"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="特色"/>
            <ImageView
                android:id="@+id/feature_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:src="@drawable/school_triangle_grey"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/major_layout"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="专业"/>
            <ImageView
                android:id="@+id/major_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:src="@drawable/school_triangle_grey"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/type_layout"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="类别"/>
            <ImageView
                android:id="@+id/type_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:src="@drawable/school_triangle_grey"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_d5d5d5"/>

    <!-- 等待提示页面 -->
    <LinearLayout
        android:id="@+id/load_layout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:src="@drawable/point_check_pic"/>
        <ProgressBar
            android:id="@+id/load_progress"
            android:visibility="gone"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@null"
            android:indeterminateDrawable="@drawable/loading_progress"
            android:padding="10dip" />
        <TextView
            android:id="@+id/load_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:textColor="@color/color_888888"
            android:text="未查询到任何信息..."/>
    </LinearLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>
    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>
