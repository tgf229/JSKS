<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f3f3f3"
    android:orientation="vertical" >

    <include layout="@layout/app_title" />

    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_ffffff"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:src="@drawable/set_icon"/>
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:textSize="16dp"
                android:textColor="@color/color_444444"
                android:text="@string/app_name"/>
            <TextView
                android:id="@+id/version_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textSize="12dp"
                android:textColor="@color/color_999999"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="30dp"
                android:background="@color/color_d5d5d5"/>

            <LinearLayout
                android:id="@+id/share_layout"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/set_icon_share"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_444444"
                    android:layout_marginLeft="10dp"
                    android:textSize="14dp"
                    android:text="分享「江苏招考」给好友"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_grey"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_d5d5d5"/>
            
            <LinearLayout
                android:id="@+id/switch_layout"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/set_icon_tuisong"
                    />
            	<TextView
            	    android:layout_width="0dp"
            	    android:layout_weight="1"
            	    android:layout_height="wrap_content"
            	    android:textColor="@color/color_444444"
                    android:layout_marginLeft="10dp"
            	    android:textSize="14dp"
            	    android:text="消息推送"/>
            	<ImageView
            	    android:id="@+id/switch_img"
            	    android:layout_width="wrap_content"
            	    android:layout_height="wrap_content"
            	    android:src="@drawable/switch_off"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/color_eeeeee"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/set_icon_phone"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_444444"
                    android:layout_marginLeft="10dp"
                    android:textSize="14dp"
                    android:text="技术服务热线"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:textSize="15dp"
                    android:textColor="@color/color_666666"
                    android:text="025-83235849"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_d5d5d5"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/set_icon_time"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_444444"
                    android:layout_marginLeft="10dp"
                    android:textSize="14dp"
                    android:text="服务时间"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:textSize="15dp"
                    android:textColor="@color/color_666666"
                    android:text="9:00~18:00"/>
            </LinearLayout>
            
            
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/end_tips"
            android:textSize="10dp"
            android:textColor="@color/color_aeaeae"
            android:layout_centerHorizontal="true"
            android:text="江苏省教育考试院权威发布"/>
        
        <TextView
            android:id="@+id/end_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="4dp"
            android:textColor="@color/color_aeaeae"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="江苏华胜天成教育科技有限公司技术支持"/>
        
    </RelativeLayout>
</LinearLayout>