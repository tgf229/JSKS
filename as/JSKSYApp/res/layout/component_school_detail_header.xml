<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    app:layout_collapseMode="parallax"
    >
    <com.jsksy.app.view.MyImageView3
        android:id="@+id/bgImg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"/>
    <ImageView
        android:id="@+id/detail_btn_back"
        android:src="@drawable/school_btn_back"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_width="35dp"
        android:layout_height="35dp" />

    <ImageView
        android:id="@+id/detail_btn_web"
        android:src="@drawable/school_detail_web_btn"
        android:layout_marginTop="35dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="#80323232"
        android:layout_alignParentBottom="true">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/logo"
            android:layout_marginLeft="10dp"
            android:layout_width="60dp"
            android:layout_height="60dp"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/name_txt"
                android:layout_width="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_height="wrap_content"
                android:textColor="@color/color_ffffff"
                android:textSize="15dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/code_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:layout_marginRight="8dp"
                    android:textColor="@color/color_ffffff"
                    android:textSize="10dp"
                    android:background="#60ffffff"/>
                <TextView
                    android:id="@+id/type_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:layout_marginRight="8dp"
                    android:textColor="@color/color_ffffff"
                    android:textSize="10dp"
                    android:background="#60ffffff"/>
                <TextView
                    android:id="@+id/rank_txt"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:layout_marginRight="8dp"
                    android:textColor="@color/color_ffffff"
                    android:textSize="10dp"
                    android:background="#60ffffff"/>
                <TextView
                    android:id="@+id/isEyy_txt"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:layout_marginRight="8dp"
                    android:textColor="@color/color_ffffff"
                    android:textSize="10dp"
                    android:background="#60ffffff"
                    android:text="211"/>
                <TextView
                    android:id="@+id/isJbw_txt"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:textColor="@color/color_ffffff"
                    android:textSize="10dp"
                    android:background="#60ffffff"
                    android:text="985"/>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>