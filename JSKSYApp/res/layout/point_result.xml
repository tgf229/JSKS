<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    android:orientation="vertical" >

    <include layout="@layout/app_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 等待提示页面 -->
	        <LinearLayout
	            android:id="@+id/load_layout"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center_horizontal"
	            android:orientation="vertical">
	            <ImageView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginTop="90dp"
	                android:src="@drawable/point_check_pic"/>
	            <ProgressBar
	                android:id="@+id/load_progress"
			        android:layout_width="40dp"
			        android:layout_height="40dp"
			        android:background="@null"
			        android:indeterminateDrawable="@drawable/loading_progress"
			        android:padding="10dip" />
	            <TextView
	                android:id="@+id/load_txt"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginTop="10dp"
	                android:textSize="20sp"
	                android:textColor="@color/color_888888"
	                android:text="正在拼命查询，请稍候..."/>
	        </LinearLayout>
        
	        <!-- 整体内容页面 -->
	        <LinearLayout
	            android:id="@+id/content_layout"
	            android:visibility="gone"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="vertical"
	            >
	             <!-- 姓名 考生号 -->
	            <RelativeLayout 
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:background="@drawable/point_result_top">
	                <RelativeLayout
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_centerHorizontal="true"
	                    android:layout_alignParentBottom="true"
	                    android:gravity="center"
	                    android:background="@drawable/point_result_word">
	                    <TextView 
	                        android:id="@+id/sName"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:textSize="11sp"
	                        android:textColor="@color/color_ffffff"/>
	                </RelativeLayout>
	            </RelativeLayout>
	           
	            <RelativeLayout 
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:gravity="center"
	                android:background="@drawable/point_result_bg">
	                <LinearLayout 
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:gravity="center"
		                android:orientation="vertical">
	                    
	                     <!-- 单成绩 分数展示页 -->
	                    <LinearLayout 
	                        android:id="@+id/single_layout"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:orientation="vertical"
	                        android:gravity="center"
	                        android:background="@drawable/point_result_total_big">
	                        <TextView
	                            android:id="@+id/totalTitle"
	                            android:layout_width="wrap_content"
	                            android:layout_height="wrap_content"
	                            android:textSize="12sp"
	                            android:textColor="@color/color_ae582e"/>
	                        <LinearLayout 
	                            android:layout_width="wrap_content"
	                            android:layout_height="wrap_content"
	                            android:orientation="horizontal">
	                            <TextView
	                            android:id="@+id/totalPoint"
		                            android:layout_width="wrap_content"
		                            android:layout_height="wrap_content"
		                            android:textSize="34sp"
		                            android:textStyle="bold"
		                            android:textColor="@color/color_ffffff"/>
	                            <TextView 
	                                android:layout_width="wrap_content"
	                                android:layout_height="wrap_content"
	                                android:textSize="10sp"
	                                android:text="分"
	                                android:textColor="@color/color_ffffff"/>
	                        </LinearLayout>
	                    </LinearLayout>
	                    
	                    <!-- 双成绩 分数展示页 -->
	                    <LinearLayout
	                        android:id="@+id/double_layout"
	                        android:visibility="gone"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:orientation="horizontal">
	                         <LinearLayout 
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:orientation="vertical"
	                        android:gravity="center"
	                        android:background="@drawable/point_result_total_small">
	                        <TextView
	                            android:layout_width="wrap_content"
	                            android:layout_height="wrap_content"
	                            android:text="体艺文化总分"
	                            android:textSize="12sp"
	                            android:textColor="@color/color_ae582e"/>
	                        <LinearLayout 
	                            android:layout_width="wrap_content"
	                            android:layout_height="wrap_content"
	                            android:orientation="horizontal">
	                            <TextView
	                            android:id="@+id/SAPoint"
		                            android:layout_width="wrap_content"
		                            android:layout_height="wrap_content"
		                            android:textSize="34sp"
		                            android:textStyle="bold"
		                            android:textColor="@color/color_ffffff"/>
	                            <TextView 
	                                android:layout_width="wrap_content"
	                                android:layout_height="wrap_content"
	                                android:textSize="10sp"
	                                android:text="分"
	                                android:textColor="@color/color_ffffff"/>
	                        </LinearLayout>
	                    </LinearLayout>
	                     <LinearLayout 
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:layout_marginLeft="3dp"
	                        android:orientation="vertical"
	                        android:gravity="center"
	                        android:background="@drawable/point_result_total_small">
	                        <TextView
	                            android:id="@+id/DOUBLETitle"
	                            android:layout_width="wrap_content"
	                            android:layout_height="wrap_content"
	                            android:textSize="12sp"
	                            android:textColor="@color/color_ae582e"/>
	                        <LinearLayout 
	                            android:layout_width="wrap_content"
	                            android:layout_height="wrap_content"
	                            android:orientation="horizontal">
	                            <TextView
	                            android:id="@+id/DOUBLEPoint"
		                            android:layout_width="wrap_content"
		                            android:layout_height="wrap_content"
		                            android:textSize="34sp"
		                            android:textStyle="bold"
		                            android:textColor="@color/color_ffffff"/>
	                            <TextView 
	                                android:layout_width="wrap_content"
	                                android:layout_height="wrap_content"
	                                android:textSize="10sp"
	                                android:text="分"
	                                android:textColor="@color/color_ffffff"/>
	                        </LinearLayout>
	                    </LinearLayout>
	                    </LinearLayout>
	                    
	                     <!-- rank 排名展示页 -->
	                    <LinearLayout
	                        android:id="@+id/rank_layout" 
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:layout_marginTop="-35dp"
	                        android:gravity="center"
	                        android:background="@drawable/point_result_rank">
	                        <TextView
	                            android:id="@+id/totalName" 
	                            android:layout_width="wrap_content"
	                            android:layout_height="wrap_content"
	                            android:textSize="14sp"
	                            android:textStyle="bold"
	                            android:textColor="@color/color_ffffff"/>
	                    </LinearLayout>
		            </LinearLayout>
	            </RelativeLayout>
	            
	            <!-- 语  数  外  -->
	            <LinearLayout 
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_marginTop="33dp"
	                android:orientation="horizontal">
	                <LinearLayout 
	                    android:layout_width="0dp"
	                    android:layout_weight="1"
	                    android:orientation="vertical"
	                    android:gravity="center_horizontal"
	                    android:layout_height="wrap_content">
	                    <TextView
	                        android:id="@+id/chinesePoint" 
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:textColor="@color/color_333333"
	                        android:textSize="17sp"/>
	                    <ImageView 
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:layout_marginTop="10dp"
	                        android:src="@drawable/point_icon_yuwen"/>
	                    <TextView
	                        android:id="@+id/chineseTitle" 
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:layout_marginTop="10dp"
	                        android:text="语文"
	                        android:textColor="@color/color_999999"
	                        android:textSize="11sp"/>
	                </LinearLayout>
	                <LinearLayout 
	                    android:layout_width="0dp"
	                    android:layout_weight="1"
	                    android:orientation="vertical"
	                    android:gravity="center_horizontal"
	                    android:layout_height="wrap_content">
	                    <TextView 
	                         android:id="@+id/mathPoint" 
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:textColor="@color/color_333333"
	                        android:textSize="17sp"/>
	                    <ImageView 
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:layout_marginTop="10dp"
	                        android:src="@drawable/point_icon_shuxue"/>
	                    <TextView 
	                        android:id="@+id/mathTitle" 
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:layout_marginTop="10dp"
	                        android:text="数学"
	                        android:textColor="@color/color_999999"
	                        android:textSize="11sp"/>
	                </LinearLayout>
	                <LinearLayout 
	                    android:layout_width="0dp"
	                    android:layout_weight="1"
	                    android:orientation="vertical"
	                    android:gravity="center_horizontal"
	                    android:layout_height="wrap_content">
	                    <TextView 
	                        android:id="@+id/englishPoint" 
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:textColor="@color/color_333333"
	                        android:textSize="17sp"/>
	                    <ImageView 
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:layout_marginTop="10dp"
	                        android:src="@drawable/point_icon_yingyu"/>
	                    <TextView 
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:layout_marginTop="10dp"
	                        android:text="英语"
	                        android:textColor="@color/color_999999"
	                        android:textSize="11sp"/>
	                </LinearLayout>
	            </LinearLayout>
	            <View android:layout_width="match_parent"
	                android:layout_height="0.5px"
	                android:layout_marginTop="18dp"
	                android:layout_marginLeft="30dp"
	                android:layout_marginRight="30dp"
	                android:background="@color/color_d5d5d5"/>
	            
	            <!-- 科目四  科目五 -->
	            <LinearLayout 
	                android:id="@+id/KM_layout"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_marginTop="33dp"
	                android:orientation="horizontal">
	                <LinearLayout 
	                    android:layout_width="0dp"
	                    android:layout_weight="1"
	                    android:layout_marginLeft="35dp"
	                    android:orientation="horizontal"
	                    android:layout_height="wrap_content">
	                    <ImageView 
	                        android:id="@+id/KM4_img"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:src="@drawable/point_icon_a_add"/>
	                    <LinearLayout 
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:layout_marginLeft="11dp"
	                        android:orientation="vertical">
		                    <TextView
		                        android:id="@+id/KM4_level"
		                        android:layout_width="wrap_content"
		                        android:layout_height="wrap_content"
		                        android:textColor="@color/color_333333"
		                        android:textSize="17sp"/>
		                    <TextView 
		                        android:id="@+id/KM4_name"
		                        android:layout_width="wrap_content"
		                        android:layout_height="wrap_content"
		                        android:layout_marginTop="8dp"
		                        android:textColor="@color/color_999999"
		                        android:textSize="11sp"/>
	                    </LinearLayout>
	                </LinearLayout>
	                <LinearLayout 
	                    android:layout_width="0dp"
	                    android:layout_weight="1"
	                    android:layout_marginLeft="35dp"
	                    android:orientation="horizontal"
	                    android:layout_height="wrap_content">
	                    <ImageView
 							android:id="@+id/KM5_img"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:src="@drawable/point_icon_a_add"/>
	                    <LinearLayout 
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:layout_marginLeft="11dp"
	                        android:orientation="vertical">
		                    <TextView 
		                        android:id="@+id/KM5_level"
		                        android:layout_width="wrap_content"
		                        android:layout_height="wrap_content"
		                        android:textColor="@color/color_333333"
		                        android:textSize="17sp"/>
		                    <TextView 
		                        android:id="@+id/KM5_name"
		                        android:layout_width="wrap_content"
		                        android:layout_height="wrap_content"
		                        android:layout_marginTop="8dp"
		                        android:textColor="@color/color_999999"
		                        android:textSize="11sp"/>
	                    </LinearLayout>
	                </LinearLayout>
	            </LinearLayout>
	            
	            <!-- 政策性照顾分   文理类奖励分 -->
	            <LinearLayout 
		                android:layout_width="match_parent"
		                android:layout_height="wrap_content"
		                android:layout_marginTop="33dp"
		                android:orientation="horizontal">
		                <LinearLayout 
		                    android:layout_width="0dp"
		                    android:layout_weight="1"
		                    android:orientation="horizontal"
		                    android:layout_marginLeft="35dp"
		                    android:layout_height="wrap_content">
		                    <ImageView 
		                        android:layout_width="wrap_content"
		                        android:layout_height="wrap_content"
		                        android:src="@drawable/point_icon_policy"/>
		                    <LinearLayout 
		                        android:layout_width="wrap_content"
		                        android:layout_height="wrap_content"
		                        android:layout_marginLeft="11dp"
		                        android:orientation="vertical">
			                    <TextView 
			                        android:id="@+id/poAdd"
			                        android:layout_width="wrap_content"
			                        android:layout_height="wrap_content"
			                        android:textColor="@color/color_333333"
			                        android:textSize="17sp"/>
			                    <TextView 
			                        android:layout_width="wrap_content"
			                        android:layout_height="wrap_content"
			                        android:layout_marginTop="8dp"
			                        android:text="政策性照顾分"
			                        android:textColor="@color/color_999999"
			                        android:textSize="11sp"/>
		                    </LinearLayout>
		                </LinearLayout>
		                <LinearLayout 
		                    android:layout_width="0dp"
		                    android:layout_weight="1"
		                    android:orientation="horizontal"
		                    android:layout_marginLeft="35dp"
		                    android:layout_height="wrap_content">
		                    <ImageView
		                        android:id="@+id/addPic" 
		                        android:layout_width="wrap_content"
		                        android:layout_height="wrap_content"
		                        android:src="@drawable/point_icon_a_add"/>
		                    <LinearLayout 
		                        android:layout_width="wrap_content"
		                        android:layout_height="wrap_content"
		                        android:layout_marginLeft="11dp"
		                        android:orientation="vertical">
			                    <TextView
			                        android:id="@+id/addPoint" 
			                        android:layout_width="wrap_content"
			                        android:layout_height="wrap_content"
			                        android:textColor="@color/color_333333"
			                        android:textSize="17sp"/>
			                    <TextView 
			                        android:id="@+id/addTitle"
			                        android:layout_width="wrap_content"
			                        android:layout_height="wrap_content"
			                        android:layout_marginTop="8dp"
			                        android:textColor="@color/color_999999"
			                        android:textSize="11sp"/>
		                    </LinearLayout>
		                </LinearLayout>
		            </LinearLayout>
		            
	            <!-- 双成绩    体艺类奖励分 -->
	            <LinearLayout
	                android:id="@+id/double_saadd_layout"
	                android:visibility="gone"
		                android:layout_width="match_parent"
		                android:layout_height="wrap_content"
		                android:layout_marginTop="33dp"
		                android:orientation="horizontal">
		                <LinearLayout 
		                    android:layout_width="0dp"
		                    android:layout_weight="1"
		                    android:orientation="horizontal"
		                    android:layout_marginLeft="35dp"
		                    android:layout_height="wrap_content">
		                    <ImageView 
		                        android:layout_width="wrap_content"
		                        android:layout_height="wrap_content"
		                        android:src="@drawable/point_icon_b_add"/>
		                    <LinearLayout 
		                        android:layout_width="wrap_content"
		                        android:layout_height="wrap_content"
		                        android:layout_marginLeft="11dp"
		                        android:orientation="vertical">
			                    <TextView 
			                        android:id="@+id/saAdd"
			                        android:layout_width="wrap_content"
			                        android:layout_height="wrap_content"
			                        android:textColor="@color/color_333333"
			                        android:textSize="17sp"/>
			                    <TextView 
			                        android:layout_width="wrap_content"
			                        android:layout_height="wrap_content"
			                        android:layout_marginTop="8dp"
			                        android:text="体艺类奖励分"
			                        android:textColor="@color/color_999999"
			                        android:textSize="11sp"/>
		                    </LinearLayout>
		                </LinearLayout>
		            </LinearLayout>
		            
	           	<RelativeLayout 
	           	    android:layout_width="match_parent"
	           	    android:layout_height="wrap_content"
	           	    android:gravity="center"
	           	    android:paddingTop="33dp"
	           	    android:paddingBottom="10dp">
	           	    <TextView
	           	        android:layout_width="wrap_content"
	           	        android:layout_height="wrap_content"
	           	        android:text="数据来源  BY 江苏省教育考试院"
	           	        android:textSize="9sp"
	           	        android:textColor="@color/color_666666"/>
	           	</RelativeLayout>
		            
	            <LinearLayout
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:paddingLeft="11dp"
	                android:paddingRight="11dp"
	                android:paddingTop="17dp"
	                android:paddingBottom="17dp"
	                android:background="@color/color_eeeeee"
	                android:gravity="center_vertical"
	                android:orientation="horizontal">
		                <View
		                    android:layout_width="0dp"
		                    android:layout_weight="1"
		                    android:layout_height="1px"
		                    android:background="@color/color_d5d5d5"/>
		                <TextView
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:textSize="11sp"
		                    android:layout_marginLeft="20dp"
		                    android:layout_marginRight="20dp"
		                    android:text="广告"
		                    android:textColor="@color/color_444444"/>
		                <View
		                    android:layout_width="0dp"
		                    android:layout_weight="1"
		                    android:layout_height="1px"
		                    android:background="@color/color_d5d5d5"/>
	            </LinearLayout>
	            
	            <LinearLayout 
	                android:id="@+id/wish_pic_layout"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:background="@color/color_eeeeee"
	                android:paddingLeft="11dp"
	                android:paddingRight="11dp"
	                android:paddingBottom="15dp"
	                >
		                <ImageView 
		                    android:layout_width="match_parent"
		                    android:layout_height="wrap_content"
		                    android:src="@drawable/point_ad"/>
	            </LinearLayout>
		            
	            
	        </LinearLayout>
	        
        </LinearLayout>
    </ScrollView>
</LinearLayout>