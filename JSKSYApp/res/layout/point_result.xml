<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    android:orientation="vertical" >

    <include layout="@layout/app_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

	        <LinearLayout
	            android:id="@+id/load_layout"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center_horizontal"
	            android:orientation="vertical">
	            <ImageView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginTop="90dp"
	                android:src="@drawable/point_check_pic"/>
	            <ProgressBar
			        android:layout_width="40dp"
			        android:layout_height="40dp"
			        android:background="@null"
			        android:indeterminateDrawable="@drawable/loading_progress"
			        android:padding="10dip" />
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginTop="10dp"
	                android:textSize="20sp"
	                android:textColor="@color/color_888888"
	                android:text="正在拼命查询，请稍候..."/>
	        </LinearLayout>
        
	        <LinearLayout
	            android:id="@+id/content_layout"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:visibility="gone"
	            android:orientation="vertical"
	            >
	            <RelativeLayout 
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:background="@drawable/point_result_top">
	                <RelativeLayout
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_centerHorizontal="true"
	                    android:layout_alignParentBottom="true"
	                    android:gravity="center"
	                    android:background="@drawable/point_result_word">
	                    <TextView 
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:textSize="11sp"
	                        android:textColor="@color/color_ffffff"
	                        android:text="姓名：周晶晶    准考证号：1234567890123456"/>
	                </RelativeLayout>
	            </RelativeLayout>
	            <RelativeLayout 
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:gravity="center"
	                android:background="@drawable/point_result_bg">
	                <LinearLayout 
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:gravity="center"
		                android:orientation="vertical">
	                    <LinearLayout 
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:orientation="vertical"
	                        android:gravity="center"
	                        android:background="@drawable/point_result_total_big">
	                        <TextView
	                            android:layout_width="wrap_content"
	                            android:layout_height="wrap_content"
	                            android:textSize="11sp"
	                            android:textColor="@color/color_ae582e"
	                            android:text="体艺文化总分"/>
	                        <TextView
		                            android:layout_width="wrap_content"
		                            android:layout_height="wrap_content"
		                            android:textSize="34sp"
		                            android:textStyle="bold"
		                            android:textColor="@color/color_ffffff"
		                            android:text="347分"/>
	                    </LinearLayout>
	                    <LinearLayout 
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:layout_marginTop="-35dp"
	                        android:gravity="center"
	                        android:background="@drawable/point_result_rank">
	                        <TextView 
	                            android:layout_width="wrap_content"
	                            android:layout_height="wrap_content"
	                            android:textSize="14sp"
	                            android:textStyle="bold"
	                            android:textColor="@color/color_ffffff"
	                            android:text="体育类投档分位次：前20名"/>
	                    </LinearLayout>
		            </LinearLayout>
	            </RelativeLayout>
	            <LinearLayout 
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_marginTop="33dp"
	                android:orientation="horizontal">
	                <LinearLayout 
	                    android:layout_width="0dp"
	                    android:layout_weight="1"
	                    android:orientation="vertical"
	                    android:gravity="center_horizontal"
	                    android:layout_height="wrap_content">
	                    <TextView 
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:text="122分+5分"
	                        android:textColor="@color/color_333333"
	                        android:textSize="17sp"/>
	                    <ImageView 
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:layout_marginTop="10dp"
	                        android:src="@drawable/point_icon_yuwen"/>
	                    <TextView 
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:layout_marginTop="10dp"
	                        android:text="语文+附加分"
	                        android:textColor="@color/color_999999"
	                        android:textSize="11sp"/>
	                </LinearLayout>
	                <LinearLayout 
	                    android:layout_width="0dp"
	                    android:layout_weight="1"
	                    android:orientation="vertical"
	                    android:gravity="center_horizontal"
	                    android:layout_height="wrap_content">
	                    <TextView 
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:text="122分"
	                        android:textColor="@color/color_333333"
	                        android:textSize="17sp"/>
	                    <ImageView 
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:layout_marginTop="10dp"
	                        android:src="@drawable/point_icon_shuxue"/>
	                    <TextView 
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:layout_marginTop="10dp"
	                        android:text="数学"
	                        android:textColor="@color/color_999999"
	                        android:textSize="11sp"/>
	                </LinearLayout>
	                <LinearLayout 
	                    android:layout_width="0dp"
	                    android:layout_weight="1"
	                    android:orientation="vertical"
	                    android:gravity="center_horizontal"
	                    android:layout_height="wrap_content">
	                    <TextView 
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:text="99分"
	                        android:textColor="@color/color_333333"
	                        android:textSize="17sp"/>
	                    <ImageView 
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:layout_marginTop="10dp"
	                        android:src="@drawable/point_icon_yingyu"/>
	                    <TextView 
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:layout_marginTop="10dp"
	                        android:text="英语"
	                        android:textColor="@color/color_999999"
	                        android:textSize="11sp"/>
	                </LinearLayout>
	            </LinearLayout>
	            <View android:layout_width="match_parent"
	                android:layout_height="0.5px"
	                android:layout_marginTop="18dp"
	                android:layout_marginLeft="30dp"
	                android:layout_marginRight="30dp"
	                android:background="@color/color_d5d5d5"/>
	            <LinearLayout 
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_marginTop="33dp"
	                android:orientation="horizontal">
	                <LinearLayout 
	                    android:layout_width="0dp"
	                    android:layout_weight="1"
	                    android:layout_marginLeft="35dp"
	                    android:orientation="horizontal"
	                    android:layout_height="wrap_content">
	                    <ImageView 
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:src="@drawable/point_icon_lishi"/>
	                    <LinearLayout 
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:layout_marginLeft="11dp"
	                        android:orientation="vertical">
		                    <TextView 
		                        android:layout_width="wrap_content"
		                        android:layout_height="wrap_content"
		                        android:text="A+"
		                        android:textColor="@color/color_333333"
		                        android:textSize="17sp"/>
		                    <TextView 
		                        android:layout_width="wrap_content"
		                        android:layout_height="wrap_content"
		                        android:layout_marginTop="8dp"
		                        android:text="历史"
		                        android:textColor="@color/color_999999"
		                        android:textSize="11sp"/>
	                    </LinearLayout>
	                </LinearLayout>
	                <LinearLayout 
	                    android:layout_width="0dp"
	                    android:layout_weight="1"
	                    android:layout_marginLeft="35dp"
	                    android:orientation="horizontal"
	                    android:layout_height="wrap_content">
	                    <ImageView 
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:src="@drawable/point_icon_zhengzhi"/>
	                    <LinearLayout 
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:layout_marginLeft="11dp"
	                        android:orientation="vertical">
		                    <TextView 
		                        android:layout_width="wrap_content"
		                        android:layout_height="wrap_content"
		                        android:text="A"
		                        android:textColor="@color/color_333333"
		                        android:textSize="17sp"/>
		                    <TextView 
		                        android:layout_width="wrap_content"
		                        android:layout_height="wrap_content"
		                        android:layout_marginTop="8dp"
		                        android:text="政治"
		                        android:textColor="@color/color_999999"
		                        android:textSize="11sp"/>
	                    </LinearLayout>
	                </LinearLayout>
	            </LinearLayout>
	            
	            <LinearLayout 
		                android:layout_width="match_parent"
		                android:layout_height="wrap_content"
		                android:layout_marginTop="33dp"
		                android:orientation="horizontal">
		                <LinearLayout 
		                    android:layout_width="0dp"
		                    android:layout_weight="1"
		                    android:orientation="horizontal"
		                    android:layout_marginLeft="35dp"
		                    android:layout_height="wrap_content">
		                    <ImageView 
		                        android:layout_width="wrap_content"
		                        android:layout_height="wrap_content"
		                        android:src="@drawable/point_icon_policy"/>
		                    <LinearLayout 
		                        android:layout_width="wrap_content"
		                        android:layout_height="wrap_content"
		                        android:layout_marginLeft="11dp"
		                        android:orientation="vertical">
			                    <TextView 
			                        android:layout_width="wrap_content"
			                        android:layout_height="wrap_content"
			                        android:text="5分"
			                        android:textColor="@color/color_333333"
			                        android:textSize="17sp"/>
			                    <TextView 
			                        android:layout_width="wrap_content"
			                        android:layout_height="wrap_content"
			                        android:layout_marginTop="8dp"
			                        android:text="政策性照顾分"
			                        android:textColor="@color/color_999999"
			                        android:textSize="11sp"/>
		                    </LinearLayout>
		                </LinearLayout>
		                <LinearLayout 
		                    android:layout_width="0dp"
		                    android:layout_weight="1"
		                    android:orientation="horizontal"
		                    android:layout_marginLeft="35dp"
		                    android:layout_height="wrap_content">
		                    <ImageView 
		                        android:layout_width="wrap_content"
		                        android:layout_height="wrap_content"
		                        android:src="@drawable/point_icon_a_add"/>
		                    <LinearLayout 
		                        android:layout_width="wrap_content"
		                        android:layout_height="wrap_content"
		                        android:layout_marginLeft="11dp"
		                        android:orientation="vertical">
			                    <TextView 
			                        android:layout_width="wrap_content"
			                        android:layout_height="wrap_content"
			                        android:text="0分"
			                        android:textColor="@color/color_333333"
			                        android:textSize="17sp"/>
			                    <TextView 
			                        android:layout_width="wrap_content"
			                        android:layout_height="wrap_content"
			                        android:layout_marginTop="8dp"
			                        android:text="文理类奖励分"
			                        android:textColor="@color/color_999999"
			                        android:textSize="11sp"/>
		                    </LinearLayout>
		                </LinearLayout>
		            </LinearLayout>
	            
	        </LinearLayout>
	        
        </LinearLayout>
    </ScrollView>
</LinearLayout>